<div class="container-fluid">
	<div class="row-fluid">
		<div class="span2">
		</div>
		<div class="span9">
			<h2>Enter your phone number, no dashes, to lock your computer</h1>
		</div>
		<div class="span1">
		</div>
	</div>
	<div class="row-fluid">
		<div class="span2">
		</div>
		<div class="span8">
			<h2>Re-enter your phone number to unlock your computer</h1>
		</div>
		<div class="span2">
		</div>
	</div>
	<br>
	<div class="row-fluid">
		<div class="span4">
		</div>
		<div class="span4">
			<%= form_tag("/main", method: "post") do %>
			  <%= phone_field_tag(:phone) %>
			  <%= submit_tag "Submit", :class => 'btn btn-primary' %>
			<% end %>		
		</div>
		<div class="span4">
		</div>
	</div>
	<div class="row-fluid">
		<div class="span2">
		</div>
		<div class="span8">
			<h5>Please turn your volume up for maximum impact</h5>
		</div>
		<div class="span2">
		</div>
	</div>
</div>